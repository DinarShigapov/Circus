<Page x:Class="Cashier.Pages.TicketSellingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Cashier.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TicketSellingPage">

    <StackPanel VerticalAlignment="Center">
        <Image Source="/Resources/Removal-552.png" Width="300" RenderOptions.BitmapScalingMode="HighQuality" Margin="0 0 0 20" />
        <Button Style="{DynamicResource RoundButton}" 
                Content="Продать билет"
                Width="200"
                Height="50"
                VerticalAlignment="Center"
                Background="#FF8ADB91"
                x:Name="BTicket"
                Click="BTicket_Click"/>
    </StackPanel>
</Page>
